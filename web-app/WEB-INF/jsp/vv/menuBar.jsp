    sb.append("&start=");
    sb.append(req.getParameter("start"));
    sb.append("&stop=");
    sb.append(req.getParameter("stop"));
    int i=1;
    for(int id:sampleList){
        sb.append("&sample"+i+"=");
        sb.append(id);
        i=i+1;
    }
    parameters=sb.toString();
